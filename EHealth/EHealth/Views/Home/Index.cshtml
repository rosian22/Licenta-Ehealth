
<link href="~/Content/pages/homeIndex.css" rel="stylesheet" />

<div class="index-page-container">

    <div class="user-details">
        <div class="profile-picture-container">
            <img style="width: 100%; height: 100%;" src="@ViewBag.ProfilePicture" />
        </div>
        <div class="details-container">
            <span class="user-name">@ViewBag.Name</span>
            <span class="user-birthday">@ViewBag.BirthDay</span>
            <div class="daily-goal">
                <label>Daily Goal</label>
                <div class="ui progress" id="daily-goal-progress-bar">
                    <div class="bar">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="statistic-table-container">
        <div class="ui top attached tabular menu statistics-table">
            <a class="item active" data-tab="first">Activity time</a>
            <a class="item" data-tab="second">Exercises</a>
            <a class="item" data-tab="third">Alimentation</a>
            <a class="item" data-tab="fourth">Sleep</a>
        </div>
        <div class="ui bottom attached tab segment active" data-tab="first">
            <div class="daily-cards">
                <div class="card-header">
                    <label class="text label-text">Daily</label>
                    <label class="text label-date">23/04/2019</label>
                </div>
                <div class="min-counter">
                    <div class="ui statistic">
                        <div class="value">
                            13
                        </div>
                        <div class="label">
                            MIN
                        </div>
                    </div>
                </div>
                <div class="daily-progress">
                    <label class="progress-label">First Part Of The Day</label>
                    <div class="ui active progress progress-bars" id="day-first-part">
                        <div class="bar">
                        </div>
                    </div>
                    <label>Second Part Of The Day</label>
                    <div class="ui active progress progress-bars" id="day-second-part">
                        <div class="bar">
                        </div>
                    </div>
                    <label>Last Part Of The Day</label>
                    <div class="ui active progress progress-bars" id="day-third-part">
                        <div class="bar">
                        </div>
                    </div>
                </div>
            </div>
            <div class="daily-cards">
                <div class="card-header">
                    <label class="text label-text">Weekly</label>
                    <label class="text label-date">23/04/2019 - 25/04/2019</label>
                </div>
                <div class="min-counter">
                    <div class="ui statistic">
                        <div class="value">
                            25
                        </div>
                        <div class="label">
                            MIN
                        </div>
                    </div>
                </div>
                <div class="daily-progress">
                    <label class="progress-label">First Part Of The Day</label>
                    <div class="ui active progress progress-bars" id="day-first-part">
                        <div class="bar">
                        </div>
                    </div>
                    <label>Second Part Of The Day</label>
                    <div class="ui active progress progress-bars" id="day-second-part">
                        <div class="bar">
                        </div>
                    </div>
                    <label>Last Part Of The Day</label>
                    <div class="ui active progress progress-bars" id="day-third-part">
                        <div class="bar">
                        </div>
                    </div>
                </div>
            </div>
            <div class="daily-cards">
                <div class="card-header">
                    <label class="text label-text">Monthly</label>
                    <label class="text label-date">23/04/2019 - 23/05/2019</label>
                </div>
                <div class="min-counter">
                    <div class="ui statistic">
                        <div class="value">
                            60
                        </div>
                        <div class="label">
                            MIN
                        </div>
                    </div>
                </div>
                <div class="daily-progress">
                    <label class="progress-label">First Part Of The Day</label>
                    <div class="ui active progress progress-bars" id="day-first-part">
                        <div class="bar">
                        </div>
                    </div>
                    <label>Second Part Of The Day</label>
                    <div class="ui active progress progress-bars" id="day-second-part">
                        <div class="bar">
                        </div>
                    </div>
                    <label>Last Part Of The Day</label>
                    <div class="ui active progress progress-bars" id="day-third-part">
                        <div class="bar">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="ui bottom attached tab segment" data-tab="second">
            Exercises
        </div>
        <div class="ui bottom attached tab segment" data-tab="third">
            Alimentation
        </div>
        <div class="ui bottom attached tab segment" data-tab="fourth">
            Sleep
        </div>
    </div>

    <div class="user-body-container">
        <div class="body-weight body-card">
            <label class="info-label common-text">
                Body Weight
            </label>
            <span class="counter common-text">92</span>
        </div>
        <div class="calories-burned body-card">
            <label class="info-label common-text">
                Calories Burned
            </label>
            <span class="counter common-text">200</span>
        </div>
        <div class="goals-achived body-card">
            <label class="info-label common-text">
                Goals Achieved
            </label>
            <span class="counter common-text">2</span>
        </div>
        <div class="achivements body-card">
            <label class="info-label common-text">
                Achievements
            </label>
            <span class="counter common-text">8</span>
        </div>
    </div>

</div>

@section Scripts {
    <script src="~/Scripts/pages/HomeIndexViewModel.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $('.daily-preogress .progress').progress();
            $('#daily-goal-progress-bar').progress();
            $('.statistics-table .item').tab();

            HomeIndexVM = new HomeIndexViewModel();
            //HomeIndexVM.Init();
            var items = $('.progress');
            var min = 0;
            var max = 70;
            for (var i = 0; i < items.length; i++) {
                var random = Math.floor(Math.random() * (+max - +min)) + +min;
                $(items[i]).progress({
                    percent: random
                });
            }

            hideLoading();
        });

    </script>
}